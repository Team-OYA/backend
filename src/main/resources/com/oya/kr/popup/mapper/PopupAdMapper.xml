<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.oya.kr.popup.mapper.PopupAdMapper">

    <insert id="save" parameterType="popupAdSaveMapperRequest">
        INSERT INTO POPUP_ADVERTISEMENT(AMOUNT, POPUP_ID)
        VALUES (#{amount}, #{popupId})
        <selectKey keyProperty="id" resultType="long" order="AFTER">
            SELECT NVL(MAX(ID), 0)
            FROM POPUP_ADVERTISEMENT
        </selectKey>
    </insert>

</mapper>
